<div class="container mt-2 ml-5 mr-5">
  <div class="row">
    <form action="/add" method="POST">
      <div class="form-group col-12">
        <label for="exampleInputEmail1">名稱</label>
        <input type="text" class="form-control col-sm-9" placeholder="餐廳名稱" id="name" name="name" required>
      </div>

      <div class="form-group col-12">
        <label for="exampleInputPassword1">類別 :</label>
        <input type="text" class="form-control col-sm-9" placeholder="餐廳類別" id="category" name="category" required>
      </div>

      <div class="form-group col-12">
        <label for="exampleInputPassword1">地址：</label>
        <input type="text" class="form-control col-sm-9" placeholder="餐廳地址" id="location" name="location" required>
      </div>

      <div class="form-group col-12">
        <label for="exampleInputEmail1">地圖：</label>
        <input type="text" class="form-control col-sm-9" placeholder="餐廳地圖" id="google_map" name="google_map">
      </div>

      <div class="form-group col-12">
        <label for="exampleInputEmail1">電話：</label>
        <input type="text" class="form-control col-sm-9" placeholder="餐廳電話" id="phone" name="phone" required>
      </div>

      <div class="form-group col-12">
        <label for="exampleInputEmail1">評分：</label>
        <input type="number" min="0" max="5" step=".1" class="form-control col-sm-9" placeholder="評分" id="rating"
          name="rating" required>
      </div>

      <div class="form-group col-12">
        <label for="exampleInputEmail1">圖片：</label>
        <input type="text" class="form-control col-sm-9" placeholder="圖片連結" id="image" name="image" required>
      </div>

      <div class="form-group col-12">
        <label for="exampleInputEmail1">簡介：</label>
        <textarea class="form-control col-sm-9" rows="8" placeholder="餐廳簡介" id="description" name="description"
          required></textarea>
      </div>

      <div class="form-group col-12">
        <button type="submit" class="btn btn-primary">提交</button>
        <a class="btn btn-secondary ml-3" href="/" role="button">回到主頁</a>
      </div>
    </form>
  </div>
</div>